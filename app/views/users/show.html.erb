<div class="container-tour" style="min-height: 600px">
  <div class="container pt-4 pb-4">
    <div class="profile-container">
      <div class="row m-0">
        <div class="col-md-3 p-0">
          <div class="left-profile-container">
            <%= image_tag "architecture-buildings-business.jpg", width: "100%", height: "200px" %>
            <h4 class="mt-3 mb-3 mr-2 ml-2"><%= current_user.name %></h4>
            <div class="tab-profile">
              <button class="tablinks-profile" onclick="tabProfile(event, 'history')">Lịch sử giao dịch</button>
            </div>
          </div>
        </div>
        <div class="col-md-9 p-0">
          <div class="right-profile-container">
            <div id="history" class="tabcontent">
              <h3><%= t(".history_booking") %></h3>
            <div class="table-responsive mt-4">
              <table class="table table-hover table-bordered">
                <thead>
                  <tr>
                    <th><%= t(".name_tour") %></th>
                    <th><%= t(".time_start") %></th>
                    <th><%= t(".time_booking") %></th>
                    <th><%= t(".quantity") %></th>
                    <th><%= t(".bill") %></th>
                    <th></th>
                  </tr>
                </thead>
                <%= render @booking %>
                </table>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
