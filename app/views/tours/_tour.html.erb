<div class="col-md-9 order-sm-first">
  <div class="title-search-tours">
    <h3><%= t(".tours") %></h3>
  </div>
  <div>
    <% @tours.each do |t| %>
      <div class="card-tour-page">
        <div class="row">
          <div class="col-md-4">
            <div class="img-card-tour-page">
              <%= image_tag "#{t.avatar}", class: "w-100" %>
              <div class="img-location"><i class="material-icons"
                style="font-size: 16">location_on</i><%= t.name_start %> - <%= t.name_end %>
              </div>
            </div>
          </div>
          <div class="col-md-5">
            <div class="card-title-tour-page">
              <h5 class="title-tour-page"><%= t.title %></h5>
              <p><%= t(".category") %><%= t.des %></p>
              <p><%= t(".count") %><%= t.soluong %></p>
              <p><%= t(".time_start") %><%= (t.time_start).to_date %></p>
            </div>
          </div>
          <div class="col-md-3">
            <div class="p-2">
              <p class="border-bottom pb-1 pt-1 m-0"><i class="fa fa-clock-o"></i>
                <%= ((t.time_end).to_date - (t.time_start).to_date).to_i %> <%= t(".dates") %>
              </p>
              <h5 class="card-price-tour-page">
                <%= number_to_currency(t.price) %></h5>
              <a href="#" class="btn btn-outline-primary w-100"><%= t(".detail") %></a>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
  <%= will_paginate %>
</div>
