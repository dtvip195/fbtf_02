<div class="container-tour">
  <div class="container pb-4">
    <div class="tour-hot-container">
      <div class="title-tour-hot">
        <h3 class="hottour"><%= t(".newtour") %></h3>
      </div>
      <%= link_to t("xemtatca"), index_path, class: "float-right btn btn-link" %>
    </div>
    <div class="row">
      <% @new_tour.each do |t| %>
        <div class="col-md-4">
          <%= link_to tour_details_path(tour_id: t.tour_id), class: "card text-left card-tour" do %>
            <div class="card-img-tour">
              <%= image_tag "bg-search.jpg", class: "w-100" %>
              <div class="img-location">
                <i class="material-icons" style="font-size: 16">location_on</i> <%= t.name_start %> - <%= t.name_end %>
              </div>
            </div>
            <div class="card-body card-body-tour">
              <h5 class="card-title"></h5>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>
