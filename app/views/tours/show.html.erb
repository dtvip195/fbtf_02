<% provide :title, t(".tour_details") %>
<div class="pb-4 pt-4">
  <div class="container">
    <div class="title-name-tour-detail">
      <h2><%= @tour_details.title %></h2>
    </div>
    <div class="row">
      <div class="col-md-8 order-md-first">
        <div class="border">
          <div>
            <%= image_tag "#{@tour_details.avatar}", class: "w-100" %>
          </div>
          <div class="general-info">
            <div>
              <p class="general-info-item">
                <i class="fa fa-map-marker" title="Điểm Đến" ></i>
                <%= @tour_details.travelling.location_end.name %>
              </p>
              <p class="general-info-item">
                <i class="fa fa-clock-o" title="Số Ngày"></i>
                <%= ((@tour_details.time_end).to_date - (@tour_details.time_start).to_date).to_i %> <%= t(".dates") %>
              </p>
              <p class="general-info-item">
                <i class="fa fa-send" title="Phương Tiện" ></i>
                <%= t(".vehicle") %>
                <i class="fas fa-bus" title="Di Chuyển Bằng Ô Tô"></i>
                <i class="fas fa-plane" title="Di Chuyển Bằng Máy Bay"></i>
              </p>
              <p class="general-info-item">
                <i class="fa fa-exclamation-circle" title="Age Limit" ></i>
                <%= t(".age_limit") %>
              </p>
              <p class="general-info-item">
                <i class="fa fa-hotel"></i>
                <%= t(".hotel") %>
              </p>
            </div>
            <p class="m-0"><i class="fa fa-flag-checkered"></i>
              <%= t(".time_start") %>
              <%= l @tour_details.time_start, format: :defaut %>
            </p>
          </div>
          <div class="container-detail-tour">
            <h2><%= t(".content") %></h2>
            <%= t(".updating") %>
          </div>
        </div>
        <div class="border mt-4">
          <% if logged_in? %>
          <div class="container-comment border-bottom">
            <h4><%= t(".your_review") %></h4>
            <%= render "reviews/review_form" %>
          </div>
          <% end %>
          <div class="scrollbar">
            <%= render @reviews %>
          </div>
        </div>
      </div>
      <div class="col-md-4 order-sm-first order-first">
        <% if logged_in? %>
          <div class="container-book-tour sticky-top">
            <h3 class="price-tour-detail">
              Giá tiền: <%= number_to_currency(@tour_details.price) %>
            </h3>
            <h3 class="price-tour-detail">
              Tổng tiền:
            </h3>
            <h2 class="price-tour-detail" id="price">

            </h2>
            <div class="form-group">
              <label><%= t(".quantity") %>
                <%= (@tour_details.max_quantity - @tour_details.recent_quantity) %>
                <%= t(".slot") %>
              </label>
              <div>
                <%= form_tag booking_path do %>
                  <%= label :quantity, "Quantity:" %>
                  <%= number_field_tag :quantity, params[:quantity],
                    class: "form-control", onclick: "myFunction()" %>
                <% end %>
              </div>
              <br>
              <%= link_to "xac nhan", booking_path(tour_id: @tour_details.id), class: "btn btn-primary" %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

<script>
  function myFunction() {
  var price = <%= @tour_details.price %>;
  var x = document.getElementById("quantity").value;
  document.getElementById("price").innerHTML = x*price;
}
  myFunction();
</script>
