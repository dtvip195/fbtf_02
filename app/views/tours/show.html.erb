<% provide :title, t(".tour_details") %>
<div class="pb-4 pt-4">
  <div class="container">
    <div class="title-name-tour-detail">
      <h2><%= @tour_details.title %></h2>
    </div>
    <div class="row">
      <div class="col-md-8 order-md-first">
        <%= render "tour_details" %>
        <div class="border mt-4">
          <% if logged_in? %>
          <div class="container-comment border-bottom">
            <h4><%= t(".your_review") %></h4>
            <%= render "reviews/review_form" %>
          </div>
          <% end %>
          <div class="scrollbar">
            <h2 style="text-align: center"><%= t(".count",count: @reviews.count) %></h2>
            <%= render @reviews %>
          </div>
          <%= will_paginate @reviews %>
        </div>
      </div>
      <div class="col-md-4 order-sm-first order-first">
        <% if logged_in? %>
          <div class="container-book-tour sticky-top">
            <h3 class="price-tour-detail">
              Giá tiền: <%= number_to_currency(@tour_details.price) %>
            </h3>
            <h3 class="price-tour-detail">
              Tổng tiền:
            </h3>
            <h2 class="price-tour-detail" id="price">

            </h2>
            <div class="form-group">
              <label><%= t(".quantity") %>
                <%= (@tour_details.max_quantity - @tour_details.recent_quantity) %>
                <%= t(".slot") %>
              </label>
              <div>
                <%= form_tag do %>
                  <%= label :quantity, "Quantity:" %>
                  <%= number_field_tag :quantity, params[:quantity],value: 1,class: "form-control", onclick: "myFunction()" %>
                <% end %>
              </div>
              <br>
              <% if (@tour_details.max_quantity - @tour_details.recent_quantity) > 0 %>
                <% if @tour_details.time_start.to_date >= Date.current %>
                  <%= link_to t(".cofirm"), new_booking_path(tour_id: @tour_details.id),
                    class: "btn btn-outline-light w-100" %>
                <% end %>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

<script>
  function myFunction() {
  var price = <%= @tour_details.price %>;
  var x = document.getElementById("quantity").value;
  document.getElementById("price").innerHTML = x*price;
}
  myFunction();
</script>
